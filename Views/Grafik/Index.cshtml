
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Değerler");
    grafik.AddSeries(
        name: "Veriler",
        xValue: new [] { "Beyaz Eşya", "Televizyon", "Laptop", "Küçük Ev Aletleri" },
        yValues:new [] {100,250,500,340}
        );
    grafik.Write();
}

