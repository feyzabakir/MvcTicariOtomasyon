@using MvcTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered" style="margin-top:10px">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td> @d.Personel</td>
            <td> @d.Alici</td>
            <td> @d.TakipKodu</td>
            <td> @d.Tarih</td>
            <td><a href="/Kargo/KargoTakip/@d.TakipKodu" class="btn btn-group" style="background-color:lightcoral; color:white">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo Girişi</a>

